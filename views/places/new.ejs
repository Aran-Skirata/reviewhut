<% layout('./layout/boilerplate') %>
<form action="/places" method="POST" class="d-flex flex-column align-items-center">
    <div class="mb-3">
        <label for="title" class="form-label">Place name</label>
        <input id="title" type="text" class="form-control" name="place[title]" placeholder="e.g. River Camp"/>
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input id="price" type="text" class="form-control" name="place[price]" placeholder="e.g. 199,99"/>
    </div>
    <div class="mb-3">
        <label for="dsc" class="form-label">Description</label>
        <textarea id="dsc" class="form-control" name="place[description]" placeholder="e.g. Comfy!" rows="4"></textarea>
    </div>
    <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input id="location" type="text" class="form-control" name="place[location]" placeholder="e.g. Warsaw Poland"/>
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input id="image" type="text" class="form-control" name="place[img]"
               placeholder="e.g. https://picsum.photos/400/300"/>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/" class="btn btn-danger">Cancel</a>
    </div>
</form>