<% layout('./layout/boilerplate') %>
<form action="/places/<%= place.id %>?_method=PATCH" method="POST" class="d-flex flex-column align-items-center needs-validation" enctype="multipart/form-data" novalidate>
    <div class="mb-3">
        <label for="title" class="form-label">Place name</label>
        <input
                id="title"
                type="text"
                class="form-control"
                name="place[title]"
                placeholder="River Camp"
                value="<%= place.title %>"
                required
        />
        <div class="invalid-feedback">
            Please choose place name.
        </div>
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input
                id="price"
                type="number"
                class="form-control"
                name="place[price]"
                placeholder="199,99"
                value="<%= place.price %>"
                required
        />
        <div class="invalid-feedback">
            Please enter price.
        </div>
    </div>
    <div class="mb-3">
        <label for="dsc" class="form-label">Description</label>
        <textarea
                id="dsc"
                class="form-control"
                name="place[description]"
                placeholder="Comfy!"
                rows="4"
                required
        ><%= place.description%></textarea>
        <div class="invalid-feedback">
            Please enter place description.
        </div>
    </div>
    <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
                id="location"
                type="text"
                class="form-control"
                name="place[location]"
                placeholder="Warsaw, Poland"
                value="<%= place.location %>"
                required
        />
        <div class="invalid-feedback">
            Please enter place location.
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label">Image</label>
        <input type="file" class="form-control" name="images" multiple>
    </div>
    <div class="row">
        <p>Delete images</p>
        <% for(let image of place.images) { %> 
        <div class="col-md-3">
            <div class="custom-control custom-checkbox image-checkbox">
                <input type="checkbox" class="custom-control-input" id="<%= image.filename %>" name= "deleteImages[]" value="<%=image.filename%>">
                <label class="custom-control-label" for="<%= image.filename %>">
                    <img src="<%= image.url %> " alt="<%= image.filename %>" class="img-thumbnail img-fluid">
                </label>
            </div>
        </div>
        <% } %> 
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/places/<%= place.id %>" class="btn btn-danger">Cancel</a>
    </div>
    </div>
</form>

